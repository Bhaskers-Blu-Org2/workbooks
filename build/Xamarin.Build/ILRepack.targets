<Project>
  <Target
    Name="ILRepack"
    AfterTargets="CopyFilesToOutputDirectory"
    Inputs="$(TargetPath)"
    Outputs="$(PackedAssembly)">
    <ItemGroup>
      <RepackReference
        Include="@(Reference)"
        Condition="!$([System.String]::new(%(Filename)).StartsWith('Microsoft'))"/>
    </ItemGroup>
    <ILRepack
      InputAssemblies="$(TargetPath)"
      OutputAssembly="$(PackedAssembly)"
      References="@(RepackReference)"/>
  </Target>
</Project>